<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             style="@style/Layout.ListItem">
    
    <TextView
        android:id="@+id/transaction_save_as_template_title_text"
        android:text="@string/transaction_save_as_template_title"
        style="@style/Text.ListItem.Primary.OneLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:id="@+id/transaction_save_as_template_subtitle_text"
        android:text="@string/transaction_save_as_template_subtitle"
        android:layout_width="0dp"
        style="@style/Text.ListItem.Secondary"
        app:layout_constraintTop_toBottomOf="@+id/transaction_save_as_template_title_text"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/transaction_save_as_template_checkbox"
        android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    
    <CheckBox
        android:id="@+id/transaction_save_as_template_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_money"
        android:tint="@color/icon_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>