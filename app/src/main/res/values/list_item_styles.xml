<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Text.ListItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Text.ListItem.Primary">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/list_item_primary</item>
    </style>
    
    <style name="Text.ListItem.Primary.OneLine">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="Text.ListItem.OverLine">
        <item name="android:textColor">@color/list_item_secondary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="Text.ListItem.Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/list_item_secondary</item>
    </style>
    
    <style name="Text.ListItem.Secondary.TwoLine">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="Layout.ListItem" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="Layout.ListItem.StickyHeader" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    
    <style name="Layout.ListItem.SingLine" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>
    
    <style name="Layout.ListItem.Image" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    
    <style name="Layout.CardView" parent="Layout.ListItem">
        <item name="cardCornerRadius">4dp</item>
    </style>

</resources>